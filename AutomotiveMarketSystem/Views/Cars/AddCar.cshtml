@model AutomotiveMarketSystem.Service.Dto.CarDto
@{
    ViewData["Title"] = "Add Car";
}

<h4>Add a Car</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCar" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Make" class="control-label"></label>
                <input asp-for="Make" class="form-control" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Recipe" class="control-label"></label>
                <input asp-for="Recipe" class="form-control" />
                <span asp-validation-for="Recipe" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Ingredients" class="control-label">Ingredients</label>
                <select asp-for="Ingredients" asp-items="ViewBag.Ingredients" class="form-control" multiple="multiple"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsHidden" /> @Html.DisplayNameFor(model => model.IsHidden)
                </label>
            </div>*@
            @{ var errorMessage = (string)(TempData["ErrorMessage"] ?? string.Empty); }
            @if (!string.IsNullOrWhiteSpace(errorMessage))
            {
                <div class="alert alert-danger">
                    <strong>Error!</strong> @errorMessage
                </div>
            }
            @*<div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
            </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>